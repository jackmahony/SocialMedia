<%= turbo_frame_tag "#{likeable.class.name.downcase}-likes-#{likeable.id}" do %>
    <%# DISLIKE BUTTON %>
  <% if current_user && (like = Like.find_by(user_id: current_user.id, likeable: likeable, liked: true)) %>
    <%= button_to "", like_path(likeable_id: like.likeable_id), class: "post-actions-unlike", method: :delete %>
  <% else %>
    <%# LIKE BUTTON %>
    <%= button_to likes_path(likeable), class: "post-actions-like", method: :post do %>
      <%= hidden_field_tag "like[likeable_id]", likeable.id %>
      <%= hidden_field_tag "like[likeable_type]", likeable.class.name %>
    <% end %>
  <% end %>
<% end %>




